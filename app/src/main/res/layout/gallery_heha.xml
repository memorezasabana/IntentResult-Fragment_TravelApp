<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7ECEF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/gallery" />

    <ImageView
        android:id="@+id/heha1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:src="@drawable/heha1" />

    <ImageView
        android:id="@+id/heha2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/heha2" />

    <ImageView
        android:id="@+id/heha3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="330dp"
        android:src="@drawable/heha3" />

    <ImageView
        android:id="@+id/heha6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:src="@drawable/heha6" />

    <Button
        android:id="@+id/btn_komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        android:fontFamily="@font/arialroundedmtbold"
        android:text="Berikan Komentar"
        android:textColor="#ffff"
        android:background="@drawable/bg_button"
        android:backgroundTint="#133C55"/>

</RelativeLayout>

